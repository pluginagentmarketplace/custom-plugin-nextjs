{
  "hooks": [
    {
      "name": "track-learning-progress",
      "event": "on-assess-complete",
      "description": "Automatically track user progress after assessments",
      "actions": [
        {
          "type": "save-progress",
          "path": ".claude-plugin/user-progress.json",
          "data": {
            "assessment_topic": "{{topic}}",
            "score": "{{score}}",
            "level": "{{level}}",
            "timestamp": "{{now}}"
          }
        },
        {
          "type": "suggest-next-steps",
          "condition": "score < 70",
          "message": "Great effort! Consider spending more time on {{weak_areas}} before moving forward."
        },
        {
          "type": "suggest-next-steps",
          "condition": "score >= 85",
          "message": "Excellent work! You're ready to advance to {{next_level}}. Try /learning-path to continue."
        }
      ]
    },
    {
      "name": "recommend-roadmap-based-on-progress",
      "event": "on-command",
      "trigger": "/roadmap",
      "description": "Suggest relevant roadmaps based on user progress",
      "actions": [
        {
          "type": "analyze-user-progress",
          "retrieve": "user-progress.json"
        },
        {
          "type": "recommend",
          "logic": "complementary-topics",
          "max_recommendations": 3
        }
      ]
    },
    {
      "name": "learning-reminders",
      "event": "on-schedule",
      "schedule": "daily-at-9am",
      "description": "Send learning reminders to keep users on track",
      "actions": [
        {
          "type": "check-learning-plan",
          "retrieve": ".claude-plugin/learning-plan.json"
        },
        {
          "type": "send-reminder",
          "condition": "has_active_plan",
          "template": "reminder-daily-learning",
          "message": "ðŸ“š Time to learn! Today's focus: {{daily_topic}}. Progress: {{completion_percent}}%"
        }
      ]
    },
    {
      "name": "validate-project-submission",
      "event": "on-project-completion",
      "description": "Auto-validate completed projects against rubrics",
      "actions": [
        {
          "type": "analyze-code",
          "categories": ["functionality", "code_quality", "documentation", "testing"]
        },
        {
          "type": "generate-feedback",
          "include": ["strengths", "improvements", "next_steps"]
        },
        {
          "type": "issue-badge",
          "condition": "all_criteria_met",
          "badge_type": "project-completion"
        }
      ]
    },
    {
      "name": "agent-context-awareness",
      "event": "on-agent-invoke",
      "description": "Provide agent with user context and progress",
      "actions": [
        {
          "type": "load-user-context",
          "retrieve": [
            "user-progress.json",
            "learning-plan.json",
            "completed-projects.json"
          ]
        },
        {
          "type": "pass-to-agent",
          "context": "user_history_and_goals"
        }
      ]
    },
    {
      "name": "skill-badge-system",
      "event": "on-skill-milestone",
      "description": "Award badges for skill mastery milestones",
      "milestones": [
        {
          "skill": "react",
          "trigger": "score >= 80 AND projects >= 2",
          "badge": "react-proficiency-badge",
          "reward": "Unlock advanced React patterns"
        },
        {
          "skill": "system-design",
          "trigger": "completed >= 3 design interviews",
          "badge": "system-design-expert",
          "reward": "Exclusive system design resources"
        },
        {
          "skill": "full-stack",
          "trigger": "badges >= 5 AND experience >= 6 months",
          "badge": "full-stack-developer",
          "reward": "Ready for professional roles"
        }
      ]
    },
    {
      "name": "adaptive-learning-paths",
      "event": "on-assess-complete",
      "description": "Adapt learning path based on assessment results",
      "actions": [
        {
          "type": "analyze-strengths-weaknesses",
          "retrieve": "recent-assessments.json"
        },
        {
          "type": "adjust-path",
          "logic": "spend_more_time_on_weak_areas"
        },
        {
          "type": "suggest-specialization",
          "condition": "clear_strength_pattern",
          "message": "You're strong in {{strength_area}}! Consider specializing in {{suggested_role}}."
        }
      ]
    },
    {
      "name": "resource-discovery",
      "event": "on-search-result",
      "description": "Provide curated resources based on search and level",
      "actions": [
        {
          "type": "filter-resources",
          "by": ["user_level", "learning_style", "time_available"]
        },
        {
          "type": "rank-resources",
          "criteria": ["relevance", "user_ratings", "freshness"]
        },
        {
          "type": "annotate",
          "add": ["time_estimate", "difficulty", "user_reviews"]
        }
      ]
    },
    {
      "name": "community-engagement",
      "event": "on-project-share",
      "description": "Encourage community sharing and feedback",
      "actions": [
        {
          "type": "ask-permission",
          "message": "Would you like to share this project with the community?"
        },
        {
          "type": "publish-project",
          "condition": "user_agrees",
          "to": "project-showcase"
        },
        {
          "type": "request-feedback",
          "from": "community"
        }
      ]
    },
    {
      "name": "weekly-progress-report",
      "event": "on-schedule",
      "schedule": "weekly-sunday-evening",
      "description": "Generate weekly progress report",
      "actions": [
        {
          "type": "aggregate-week-data",
          "metrics": [
            "hours_studied",
            "topics_covered",
            "assessments_taken",
            "projects_completed",
            "progress_percentage"
          ]
        },
        {
          "type": "generate-report",
          "include": [
            "summary",
            "achievements",
            "challenges",
            "next_week_plan"
          ]
        },
        {
          "type": "send-report",
          "format": "weekly-summary"
        }
      ]
    },
    {
      "name": "prevent-stagnation",
      "event": "on-schedule",
      "schedule": "weekly",
      "description": "Alert if user hasn't engaged in a week",
      "actions": [
        {
          "type": "check-engagement",
          "days": 7
        },
        {
          "type": "send-alert",
          "condition": "no_activity",
          "template": "motivation-boost",
          "message": "We miss you! ðŸ‘‹ Jump back into learning with /learning-path"
        }
      ]
    },
    {
      "name": "career-readiness-check",
      "event": "on-milestone",
      "trigger": "6_months_of_learning",
      "description": "Check if user is ready for professional roles",
      "actions": [
        {
          "type": "evaluate-readiness",
          "criteria": [
            "skill_level >= intermediate",
            "projects >= 3",
            "assessments_passed >= 70%",
            "portfolio_created"
          ]
        },
        {
          "type": "generate-assessment",
          "report": "career-readiness"
        },
        {
          "type": "suggest-next-steps",
          "if_ready": "You're ready for junior positions! Start applying.",
          "if_not_ready": "Focus on {{missing_areas}} to become career-ready."
        }
      ]
    }
  ],
  "notifications": {
    "enabled": true,
    "channels": ["inline", "summary-email"],
    "quiet_hours": "23:00-08:00"
  },
  "analytics": {
    "track_engagement": true,
    "track_learning_patterns": true,
    "respect_privacy": true
  },
  "ai_features": {
    "adaptive_difficulty": true,
    "personalized_recommendations": true,
    "learning_style_detection": true,
    "pace_adaptation": true
  }
}
